<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/algo_background">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_hp"
        android:background="@color/colorPrimary"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_hp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">



            <ImageView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/help_step_1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:id="@+id/help1"
            />

            <TextView
                android:id="@+id/step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:text="Step 1:"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@id/help1"/>

            <TextView
                android:id="@+id/step1_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@id/help1"
                android:text="Load the Application:"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/help_step_2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_below="@id/help1"
                android:id="@+id/help2"
                />

            <TextView
                android:id="@+id/step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:text="Step 2:"
                android:textSize="30dp"
                android:layout_below="@id/help1"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@id/help2"/>

            <TextView
                android:id="@+id/step2_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step2"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@id/help2"
                android:text="Click on Start Predicting button:"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/help_step_3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:id="@+id/help3"
                android:layout_below="@id/help2"
                />

            <TextView
                android:id="@+id/step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/help2"
                android:layout_alignParentLeft="true"
                android:text="Step 3:"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@id/help1"/>

            <TextView
                android:id="@+id/step3_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step3"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@id/help1"
                android:text="Choose an Image from Select Button or Click an Image using Camera Option"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/help_step_4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:id="@+id/help4"
                android:layout_below="@id/help3"
                />

            <TextView
                android:id="@+id/step4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/help3"
                android:layout_alignParentLeft="true"
                android:text="Step 4:"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@id/help1"/>

            <TextView
                android:id="@+id/step4_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step4"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@id/help1"
                android:text="Your Image will be Loaded in the Application"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />


            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/help_step_5"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:id="@+id/help5"
                android:layout_below="@id/help4"
                />

            <TextView
                android:id="@+id/step5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/help4"
                android:layout_alignParentLeft="true"
                android:text="Step 5:"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@id/help1"/>

            <TextView
                android:id="@+id/step5_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step5"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@id/help1"
                android:text="Click on Upload Button to start the Prediction"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />


            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/help_step_6"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:id="@+id/help6"
                android:layout_below="@id/help5"
                />

            <TextView
                android:id="@+id/step6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/help5"
                android:layout_alignParentLeft="true"
                android:text="Step 6:"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@id/help1"/>

            <TextView
                android:id="@+id/step6_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step6"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@id/help6"
                android:text="Wait for the Processing"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/help_step_7"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:id="@+id/help7"
                android:layout_below="@id/help6"
                />

            <TextView
                android:id="@+id/step7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/help6"
                android:layout_alignParentLeft="true"
                android:text="Step 7:"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@id/help1"/>

            <TextView
                android:id="@+id/step7_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step7"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@id/help1"
                android:text="Results will be Displayed"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />





        </RelativeLayout>

    </ScrollView>




</RelativeLayout>